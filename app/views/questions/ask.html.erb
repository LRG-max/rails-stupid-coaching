
<div class="container mt-5">
  <h2 class="text-center mb-4">Ask your coach anything</h2>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg p-4">
        <form action="/answer" method="get" class="row g-3">
          <!-- Champ question -->
          <div class="col-12">
            <label for="answer" class="form-label">Your question:</label>
            <input type="text" id="answer" name="answer" class="form-control w-100" required>
          </div>

          <!-- Bouton d'envoi -->
          <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary btn-lg px-4 py-2 rounded-pill shadow">Ask</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
